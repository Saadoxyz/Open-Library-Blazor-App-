@page "/Library"
@inject NavigationManager NavigationManager
@inject IJSRuntime JSRuntime

<div class="login-container">
    <div class="login-card">
        <div class="login-header">
            <div class="header-text">
                OPEN LIBRARY
            </div>
            <div class="subheader-text">
                Sign in to continue
            </div>
        </div>
        <div class="login-body">
            <form @onsubmit="HandleLogin">
                <div class="form-group">
                    <label for="username">Username</label>
                    <input type="text" class="form-control" id="username" @bind="username" />
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" class="form-control" id="password" @bind="password" />
                </div>
                <div class="form-check">
                    <input type="checkbox" class="form-check-input" id="remember" @bind="remember" />
                    <label class="form-check-label" for="remember">Remember me</label>
                </div>
                <div class="login-button-container">
                    <button type="submit" class="btn btn-primary login-button">Login</button>
                </div>
            </form>
            <hr />
            <div class="login-links">
                <a href="#">Forgot Password?</a> | <a href="#">Sign Up</a>
            </div>
        </div>
    </div>
</div>

<style>
    .login-container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
    }

    .login-card {
        width: 300px;
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        border-radius: 4px;
        overflow: hidden;
    }

    .login-header {
        background-color: #0d6efd;
        color: white;
        padding: 20px;
        text-align: center;
    }

    .header-text {
        font-size: 18px;
        font-weight: bold;
        letter-spacing: 1px;
        line-height: 1.2;
    }

    .subheader-text {
        font-size: 14px;
        margin-top: 5px;
    }

    .login-body {
        padding: 20px;
        background-color: white;
    }

    .form-group {
        margin-bottom: 15px;
    }

    .form-control {
        width: 100%;
        padding: 8px;
        border: 1px solid #ced4da;
        border-radius: 4px;
    }

    .form-check {
        margin-bottom: 15px;
    }

    .login-button-container {
        margin-bottom: 15px;
    }

    .login-button {
        width: 100%;
        background-color: #0d6efd;
        border: none;
        padding: 8px;
    }

    .login-links {
        text-align: center;
        font-size: 14px;
    }

    hr {
        margin: 15px 0;
    }

    a {
        color: #0d6efd;
        text-decoration: none;
    }
</style>

@code {
    
    private string username = "saad khan";
    private string password = "1234";
    private bool remember = false;

    private async Task HandleLogin()
    {
        if (username == "saad khan" && password == "1234")
        {
            await JSRuntime.InvokeVoidAsync("alert", "Login successful!");
            NavigationManager.NavigateTo("/home");
        }
        else
        {
            await JSRuntime.InvokeVoidAsync("alert", "Invalid credentials! Please use saad khan/1234");
        }
    }
}